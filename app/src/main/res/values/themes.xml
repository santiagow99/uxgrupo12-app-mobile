<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="android:windowBackground">@color/colorSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/public_sans</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Project" parent="Base.Theme.Project" />

    <style name="ButtonStyle" parent="Base.Theme.Project">
        <item name="fontFamily">@font/public_sans_bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="InputStyle" parent="Base.Theme.Project">
        <item name="boxCornerRadiusBottomEnd">@dimen/radiusDefault</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radiusDefault</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radiusDefault</item>
        <item name="boxCornerRadiusTopStart">@dimen/radiusDefault</item>
    </style>

    <style name="SwitchStyle" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurfaceVariant">@color/colorPrimary</item>
    </style>


</resources>